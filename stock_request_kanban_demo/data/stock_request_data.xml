<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kanban_route" model="stock.location.route">
        <field name="name">Transfer route</field>
        <field name="product_selectable" eval="True"/>
    </record>

    <record id="procurement_rule" model="procurement.rule">
        <field name="name">Transfer</field>
        <field name="route_id" ref="kanban_route"/>
        <field name="location_src_id" ref="stock.stock_location_stock"/>
        <field name="location_id" ref="stock_location_stock"/>
        <field name="action">move</field>
        <field name="procure_method">make_to_stock</field>
        <field name="warehouse_id" ref="warehouse"/>
        <field name="propagate" eval="False"/>
        <field name="picking_type_id" ref="picking_type_internal"/>
    </record>

    <record id="kanban_consu_product" model="product.product">
        <field name="name">Consumable Product</field>
        <field name="type">consu</field>
        <field name="default_code">CONS</field>
        <field name="route_ids" eval="[(4, ref('kanban_route'))]"/>
    </record>

    <record id="kanban_product" model="product.product">
        <field name="name">Stockable Product</field>
        <field name="type">product</field>
        <field name="default_code">STCK</field>
        <field name="route_ids" eval="[(4, ref('kanban_route'))]"/>
    </record>

    <record id="kanban_1" model="stock.request.kanban">
        <field name="name">KBTEST01</field>
        <field name="product_id" ref="kanban_consu_product"/>
        <field name="location_id" ref="stock_location_stock"/>
        <field name="warehouse_id" ref="warehouse"/>
        <field name="product_uom_qty">10</field>
        <field name="product_uom_id" ref="product.product_uom_unit"/>
    </record>

    <record id="kanban_2" model="stock.request.kanban">
        <field name="name">KBTEST02</field>
        <field name="product_id" ref="kanban_consu_product"/>
        <field name="location_id" ref="stock_location_stock"/>
        <field name="warehouse_id" ref="warehouse"/>
        <field name="product_uom_qty">10</field>
        <field name="product_uom_id" ref="product.product_uom_unit"/>
    </record>

    <record id="kanban_3" model="stock.request.kanban">
        <field name="name">KBTEST03</field>
        <field name="product_id" ref="kanban_consu_product"/>
        <field name="location_id" ref="stock_location_stock"/>
        <field name="warehouse_id" ref="warehouse"/>
        <field name="product_uom_qty">10</field>
        <field name="product_uom_id" ref="product.product_uom_unit"/>
    </record>

    <record id="kanban_4" model="stock.request.kanban">
        <field name="name">KBTEST04</field>
        <field name="product_id" ref="kanban_product"/>
        <field name="location_id" ref="stock_location_stock"/>
        <field name="warehouse_id" ref="warehouse"/>
        <field name="product_uom_qty">1</field>
        <field name="product_uom_id" ref="product.product_uom_unit"/>
    </record>

    <record id="kanban_5" model="stock.request.kanban">
        <field name="name">KBTEST05</field>
        <field name="product_id" ref="kanban_product"/>
        <field name="location_id" ref="stock_location_stock"/>
        <field name="warehouse_id" ref="warehouse"/>
        <field name="product_uom_qty">1</field>
        <field name="product_uom_id" ref="product.product_uom_unit"/>
    </record>

    <record id="base.group_user" model="res.groups">
        <field name="implied_ids"
               eval="[
               (4, ref('stock.group_production_lot')),
               (4, ref('stock.group_adv_location')),
               (4, ref('stock.group_stock_multi_locations')),
               (4, ref('stock.group_stock_multi_warehouses')),
               (4, ref('stock_request.group_stock_request_order')),
               ]"/>
    </record>
</odoo>

